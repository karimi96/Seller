<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:direction">right_to_left</item>
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextAppearance">@style/CustomHintSize</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:backgroundTint">@color/text_hint</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textColorHint">@color/text_main</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11dp</item>
    </style>


    <style name="Text">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>


    <style name="Text.TextMain">
        <item name="android:textSize">14dp</item>
    </style>


    <style name="Text.TextSecondary">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>    </style>


    <style name="test">
        <item name="android:fontFamily">@font/iran_sans</item>
    </style>


    <style name="CustomLine">
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
    </style>



</resources>