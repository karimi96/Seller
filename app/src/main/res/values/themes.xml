    <style name="TextMain">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="TextSecondary">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>    </style>


    <style name="test">
        <item name="android:fontFamily">@font/iran_sans</item>
    </style>


    <style name="CustomLine">
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextHelper">
        <item name="android:textColor">@color/text_helper</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

 <style name="CheckBox">
        <item name="theme">@style/TextMain</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layoutDirection">ltr</item>
    </style>



    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/up_to_down</item>
        <item name="android:windowExitAnimation">@anim/down_to_up</item>
    </style>


</resources>