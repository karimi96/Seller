<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:focusableInTouchMode="true"
    android:outlineSpotShadowColor="@color/shadow"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/pic_store" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="15dp"
            android:hint="@string/name_business_owner">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_name"
                style="@style/CustomTextInputEditText"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="13dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/CustomTextInputLayout"
            android:layout_marginTop="5dp"
            android:hint="@string/business_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_business_name"
                style="@style/CustomTextInputEditText"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="13dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.codesgood.views.JustifiedTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/iran_sans"
            android:gravity="end|start"
            android:text="@string/description_1"
            android:textColor="#BFBFBF"
            android:textFontWeight="500"
            android:textSize="12dp" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            app:boxStrokeWidth="0dp"
            app:startIconTint="@color/text_hint"
            android:paddingStart="-15dp"
            app:startIconDrawable="@drawable/ic_store"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/text_hint"
            app:endIconDrawable="@drawable/item_select_more_spinner"
            app:endIconTint="@color/text_hint"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:drawablePadding="10dp"
                android:paddingTop="13dp"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:paddingBottom="2dp"
                android:hint="فروشگاه آماده برای شما"
                android:inputType="none"
                android:paddingStart="0dp"
                android:textColor="@color/text_main"
                android:textColorHint="@color/text_hint"
                android:textFontWeight="500"
                android:textSize="14dp" />

            <View
                android:background="@color/text_hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
