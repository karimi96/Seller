<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:weightSum="3">


    <TextView
        android:id="@+id/tv_order_count"
        style="@style/TextMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/item_border_text"
        android:drawableTop="@drawable/ic_cart2"
        android:drawablePadding="10dp"
        android:drawableTint="@color/purple"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:text="290 عدد موجودی"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_amount_all_order"
        style="@style/TextMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:background="@drawable/item_border_text"
        android:drawableTop="@drawable/ic_currency"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:text="290 عدد موجودی"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_order_last_date"
        style="@style/TextMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/item_border_text"
        android:drawableTop="@drawable/ic_calendar_range"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:text="290 عدد موجودی"
        android:textSize="12dp" />

</LinearLayout>
